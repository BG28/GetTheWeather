<body style="background-color: #2c3539 !important">
    <section class="loadDisplay">
        <div class="headerTemplate">
            <div>
                <h1 class="heading">Get The Weather</h1>
            </div>
            <form action="/" method="POST">
                <input type="text" name="cityName" placeholder="Enter the city name" class="searchBox" autofocus>
                <button type="submit" name="city" class="btn btn-lg btn-danger">Get it</button>
            </form>
        </div>
    </section>
    <% if(flag != null){%>
    <section class="show-weather">
        <div class="result">
            <p><%= city%></p>
            <p><%=temp%>â„ƒ</p>
            <img src=" <%=image%>" alt="">
            <p><%=description%></p>
        </div>
    </section>
    <%}%>
    
